<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background ="@drawable/background" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:background ="@drawable/resetpwd_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/resetpwd_cancelbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:padding="1dp"
                android:background="@drawable/cancel_button_effect" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:gravity="center_vertical"
	        android:layout_marginTop="20dp"
            android:orientation="vertical" >
            
            <EditText
	            android:id="@+id/resetpwd_userNameET"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:inputType="textPersonName"
	            android:background="@drawable/blankbar"
	            android:ems="10"
	            android:hint="用户名"
	            android:paddingLeft="10dp" />
            <EditText
	            android:id="@+id/resetpwd_realNameET"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:inputType="textPersonName"
	            android:background="@drawable/blankbar"
	            android:ems="10"
	            android:hint= "真实姓名"
	            android:paddingLeft="10dp" />
            <EditText
	            android:id="@+id/resetpwd_mobilephoneET"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:inputType="textPersonName"
	            android:background="@drawable/blankbar"
	            android:ems="10"
	            android:hint= "申请时所填的手机号"
	            android:paddingLeft="10dp" />
            <EditText
	            android:id="@+id/resetpwd_pwdET"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/blankbar"
	            android:ems="10"
	            android:hint= "新密码"
	            android:inputType="textPassword"
	            android:paddingLeft="10dp" />
            <EditText
	            android:id="@+id/resetpwd_pwdConfigET"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/blankbar"
	            android:ems="10"
	            android:inputType="textPassword"
	            android:hint= "再输一次新密码"
	            android:paddingLeft="10dp" />
            <Button
	            android:id="@+id/resetpwd_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/btn_style"
	            android:text = "重置密码"/>
        </LinearLayout>

        
            
    </LinearLayout>

</FrameLayout>