<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friendlist_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/aboutme_bar_effect"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >
	<RelativeLayout
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
	    <ImageView
	        android:id="@+id/friendlist_headimg"
	        android:layout_width="53dp"
	        android:layout_height="53dp"
	        android:layout_marginLeft="5dp"
	        android:adjustViewBounds="false"
	        android:src="@drawable/homepage_headimg"
	        android:padding="5dp" />

	    <TextView
	        android:id="@+id/friendlist_username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:layout_toRightOf="@+id/friendlist_headimg"
	        android:gravity="center"
	        android:text=""
	        android:textColor="@color/black"
	        android:textSize="20dp" />

	</RelativeLayout>
</LinearLayout>